        <activity
            android:name=".activities.ApplicantDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ApplicantsListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.JobDetailActivity"
            android:exported="false" />
        <activity
            android:name=".company.CompanyMainActivity"
            android:exported="false" />
        <activity
            android:name=".authRecruiter.RecruiterRegisterActivity"
